{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "lib": ["ES2020", "WebWorker"],
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "~/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
, "src/index.ts", "../frontend/src/utils/mailer.ts", "../frontend/src/pages/PaymentSuccess.tsx"    ],
    "exclude": [
      "node_modules"
    ]
  }
  