{
  "name": "sportstolt",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",

    "studio": "dotenv -e packages/db/.env.local -- prisma studio --schema=packages/db/prisma/schema.prisma",
    "migrate": "dotenv -e packages/db/.env.local -- prisma migrate dev --schema=packages/db/prisma/schema.prisma",
    "reset": "dotenv -e packages/db/.env.local -- prisma migrate reset --force --schema=packages/db/prisma/schema.prisma",
    "reset:prod": "dotenv -e packages/db/.env.production -- prisma migrate reset --force --skip-generate --schema=packages/db/prisma/schema.prisma",
    "generate": "dotenv -e packages/db/.env.local -- prisma generate --schema=packages/db/prisma/schema.prisma",
    
    "generate:prod": "dotenv -e packages/db/.env.production -- prisma generate --schema=packages/db/prisma/schema.prisma",
    "generate:acc": "dotenv -e packages/db/.env.production -- prisma generate --schema=packages/db/prisma/schema.prisma --accelerate",

    "migrate:deploy": "dotenv -e packages/db/.env.production -- prisma migrate deploy --schema=packages/db/prisma/schema.prisma",
    "push": "dotenv -e packages/db/.env.production -- prisma db push --schema=packages/db/prisma/schema.prisma",

    "deploy": "cd apps/backend && dotenv -e ../../packages/db/.env.production -- wrangler deploy --minify",
    "deploy:all": "npm run push && npm run generate:acc && npm run deploy"
  },

  "prisma": {
    "schema": "./packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/aws-sdk": "^0.0.42",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/nock": "^10.0.3",
    "@types/react-redux": "^7.1.34",
    "prettier": "^3.2.5",
    "prisma": "^6.7.0",
    "turbo": "^2.2.3",
    "typescript": "5.5.4",
    "wrangler": "^4.18.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "version": "0.0.2",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@reduxjs/toolkit": "^2.6.1",
    "@sendgrid/mail": "^8.1.5",
    "@tanstack/react-query": "^5.68.0",
    "@types/glob": "^7.2.0",
    "@types/nodemailer": "^6.4.17",
    "@vanshkathpalia/sportstolt-common": "^1.0.3",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "form-data": "^4.0.1",
    "framer-motion": "^11.18.2",
    "glob": "^7.2.3",
    "hono": "^4.6.11",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.460.0",
    "minimatch": "^3.1.2",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-redux": "^9.2.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  }
}
