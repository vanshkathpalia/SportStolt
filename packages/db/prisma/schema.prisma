model User {
  id                    Int               @id @default(autoincrement())
  email                 String            @unique
  username              String?           @unique
  name                  String?
  image                 String?           // Profile image
  bio                   String?           // Short description
  location              String?           // e.g. Delhi
  university            String?           // e.g. XYZ University
  achievements          String?           // e.g. TT Captain, Football Champion
  legitimacy            String?           // e.g. "97%" (might calculate this from verified stories)
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  password              String

  points                Int               @default(0)
  badgeLevel            String?           // e.g. "Gold", "Silver", etc.

  post                  Post[]            // Posts user has made
  savedPosts            Save[]            // Saved posts
  likedPosts            Like[]            // Liked posts
  story                 Story[]
  verifiedStories       Verification[]    // Verification-related stories
  storyAttendance       StoryAttendance[]
  Storyimages           Storyimages[]
  tweet                 Tweet[]
  registration          Registration[]

  comment               Comment[]
  event                 Event[]           // Events participated (can be filtered later)

  sentNotifications     Notification[]    @relation("SentNotifications")
  receivedNotifications Notification[]    @relation("ReceivedNotifications")
  followers             Follow[]          @relation("Followers")
  following             Follow[]          @relation("Following")

  resetToken            String?           
  resetTokenExpiry      DateTime?
}

